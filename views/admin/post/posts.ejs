<!doctype html>
<html lang="en">
  <!-- header  -->
  <%-include ("../partials/adminHeader.ejs")%>
  <!-- end header -->
  <body
    class="bg-linear-to-r min-h-[100vh] from-cyan-900 to-cyan-600 md:via-cyan-600 md:to-cyan-500"
  >
    <div>
      <!-- navbar -->
      <%-include ("../partials/adminNavbar.ejs")%>
      <!-- end navbar -->
    </div>

    <section class="w-full bg-blue-100">
      <div class="w-full h-full flex flex-col md:flex-row md:items-stretch">
        <div
          class="w-[100%] p-4 min-h-[calc(100vh-110px)] md:min-h-[calc(100vh-130px)]"
        >
          <h2 class="text-2xl md:text-4xl font-bold text-center">All Posts</h2>
          <div>
            <a
              href="./add"
              class="py-3 px-4 bg-amber-500 text-white text-[1.1rem] shadow font-bold rounded-[3px]"
            >
              Add Post
            </a>
          </div>
          <div class="mt-4">
            <table class="border-collapse w-full">
              <thead
                class="bg-cyan-700 border-b-2 text-white text-[1rem] border-cyan-300 font-bold tracking-wide text-left"
              >
                <tr>
                  <th class="w-[10%] p-3">No.</th>
                  <th class="w-[70%] p-3">Title</th>
                  <th colspan="2" class="p-3">Action</th>
                </tr>
              </thead>
              <tbody class="text-left font-semibold">
                <tr class="bg-white text-[1rem]">
                  <td class="p-3">1</td>
                  <td class="p-3">This is a sample title</td>
                  <td class="p-3">edit</td>
                  <td class="p-3">delete</td>
                </tr>
                <tr class="bg-cyan-50 text-[1rem]">
                  <td class="text-gray-700 p-3">2</td>
                  <td class="text-gray-700 p-3">This is a sample title</td>
                  <td class="text-gray-700 p-3">edit</td>
                  <td class="text-gray-700 p-3">delete</td>
                </tr>
                <tr class="bg-white text-[1rem]">
                  <td class="p-3 text-gray-700">3</td>
                  <td class="p-3 text-gray-700">This is a sample title</td>
                  <td class="p-3 text-gray-700">edit</td>
                  <td class="p-3 text-gray-700">delete</td>
                </tr>
                <tr class="bg-cyan-50 text-[1rem]">
                  <td class="text-gray-700 p-3">4</td>
                  <td class="text-gray-700 p-3">This is a sample title</td>
                  <td class="text-gray-700 p-3">edit</td>
                  <td class="text-gray-700 p-3">delete</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </section>

    <!-- footer -->
    <%- include ("../partials/adminFooter.ejs")%>
    <!-- end footer -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
    <script src="./script.js"></script>
  </body>
</html>
